body
  font-family Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif

.top-menu
  float left
  width 100%
  height 50px
  padding 10px 20px
  box-sizing border-box
  width 100%
  background #324057
  h1
    float left
    width calc(100% - 50px)
    font-weight bold
    font-size 18px
    height 30px
    line-height 30px
    text-align center
    color #7fe67f
    span
      color #fff

.burger
  position relative
  float left
  width 25px
  height 30px
  cursor pointer
  outline none
  .bline
    position absolute
    left 0
    width 100%
    height 2px
    background #fff
  .bl-1
    top 7px
  .bl-2
    top 13px
  .bl-3
    top 19px

.second-menu
  float right
  width 25px
  height 30px
  box-sizing border-box
  padding 7px 0 0
  color #fff
  text-align right
  .el-icon-menu
    display inline-block

.workspace
  float left
  width 100%

.container
  float left
  width 100%
  box-sizing border-box
  padding 20px


