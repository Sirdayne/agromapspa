#app
  position relative
  min-height 100vh
  cursor pointer
  overflow hidden
  font-family Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif

.top-menu
  float left
  width 100%
  height 50px
  padding 10px 20px
  box-sizing border-box
  background #324057
  h1
    float left
    width calc(100% - 50px)
    font-weight bold
    font-size 18px
    height 30px
    line-height 30px
    text-align center
    color #7fe67f
    span
      color #fff

.burger
  position relative
  float left
  width 25px
  height 30px
  cursor pointer
  outline none
  .bline
    position absolute
    left 0
    width 100%
    height 2px
    background #fff
  .bl-1
    top 7px
  .bl-2
    top 13px
  .bl-3
    top 19px

.second-menu
  float right
  width 25px
  height 30px
  box-sizing border-box
  padding 7px 0 0
  color #fff
  text-align right
  .el-icon-menu
    display inline-block

.overlay-dark
  position absolute
  display none
  top 0px
  left 0px
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  z-index 49
  &.active
    display block

.sidebar, .second-bar
  position absolute
  top 0px
  width 240px
  padding 0 20px 10px
  height 100%
  box-sizing border-box
  background #fff
  transition .3s linear
  z-index 50

.sidebar
  left -240px
  &.active
    left 0px

.second-bar
  right -240px
  &.active
    right 0px

.top-line
  float left
  width 100%
  height 50px
  padding 10px 0
  box-sizing border-box
  border-bottom 1px solid #323232
  .el-icon-close
    margin-top 7px
  .close-left
    float left
  .close-right
    float right

.workspace
  float left
  width 100%

.container
  float left
  width 100%
  box-sizing border-box
  padding 20px


